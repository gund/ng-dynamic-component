{
  "name": "ng-dynamic-component",
  "version": "0.0.0-semantically-released",
  "description": "Dynamic components with full life-cycle support for inputs and outputs for Angular",
  "main": "dist/bundles/ng-dynamic-component.umd.js",
  "module": "dist/bundles/ng-dynamic-component.es5.js",
  "es2015": "dist/bundles/ng-dynamic-component.es2015.js",
  "typings": "dist/ng-dynamic-component.d.ts",
  "scripts": {
    "commit": "git-cz",
    "prepublish": "npm run build",
    "build": "node scripts/build.js",
    "build:release": "node scripts/release.js",
    "pretest": "npm run cleancoverage",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand --coverage",
    "test:report": "cd coverage && codecov",
    "cleancoverage": "rimraf coverage",
    "check-coverage": "istanbul check-coverage --functions 75 --lines 75 --branches 75 --statements 75",
    "ci": "npm run test:ci && npm run check-coverage",
    "presemantic-release": "npm run build:release",
    "semantic-release": "cd dist && semantic-release pre && npm publish && semantic-release post"
  },
  "keywords": [
    "angular",
    "angular2",
    "ng",
    "dynamic",
    "component",
    "input",
    "output",
    "life-cycle"
  ],
  "author": "Alex Malkevich <malkevich.alex@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "@angular/common": "^5.0.0",
    "@angular/core": "^5.0.0",
    "rxjs": "^5.0.0",
    "tslib": "^1.0.0"
  },
  "devDependencies": {
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/platform-server": "^5.0.0",
    "@types/jest": "^22.0.0",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^5.0.0",
    "codecov": "^3.0.0",
    "codelyzer": "^4.0.1",
    "commitizen": "^2.9.6",
    "copy-dir": "^0.3.0",
    "copyfiles": "^2.0.0",
    "cz-conventional-changelog": "^2.0.0",
    "istanbul": "^0.4.5",
    "jasmine-core": "^2.5.2",
    "jasmine-spec-reporter": "^4.0.0",
    "jest": "^22.0.4",
    "jest-preset-angular": "^5.0.0",
    "json-loader": "^0.5.4",
    "karma": "^1.4.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-coverage-istanbul-reporter": "^1.1.0",
    "karma-jasmine": "^1.1.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-remap-istanbul": "^0.6.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "npm-run-all": "^4.0.2",
    "raw-loader": "^1.0.0-beta.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.57.1",
    "rollup-globals-regex": "^0.0.3",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rxjs": "^5.5.0",
    "semantic-release": "^15.1.4",
    "source-map": "^0.7.2",
    "source-map-loader": "^0.2.0",
    "sourcemap-istanbul-instrumenter-loader": "^0.2.0",
    "tslib": "^1.8.0",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.4.3",
    "typescript": "~2.4.0",
    "uglify-js": "^3.0.15",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3",
    "zone.js": "^0.8.18"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gund/ng-dynamic-component.git"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "roots": ["<rootDir>/src"],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupJest.ts",
    "collectCoverageFrom": [
      "src/dynamic/**/*.ts",
      "!src/dynamic/index.ts",
      "!src/dynamic/dynamic.module.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
